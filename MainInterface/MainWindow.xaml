<Window Name="Window" x:Class="TLDR_Masterduel_Overlay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TLDR_Masterduel_Overlay"
        mc:Ignorable="d"
        Title="MainWindow" Height="180" MinHeight="180" Width="400" MinWidth="400" SizeToContent="Height">
    <Grid Name="Grid" RenderTransformOrigin="0.5,0.5" Margin="10,10,10,10">
        <Button Name="StartButton" Content="Start" Margin="10,10,0,0" VerticalAlignment="Top" Click="Start_click" HorizontalAlignment="Left" Width="60"/>
        <Button Name="StopButton" Content="Stop" Margin="0,10,10,0" VerticalAlignment="Top" Click="Stop_click" HorizontalAlignment="Right" Width="60"/>
        <CheckBox Name="ShowLog"  Content="Console Log" HorizontalAlignment="Left" Margin="10,89,0,0" VerticalAlignment="Top" Height="15" Checked="ShowLogCheckBox" Unchecked="ShowLogCheckBox"/>
        <TextBox Name="ConsoleLog" TextWrapping="Wrap" Margin="0,109,0,0" Visibility="Collapsed" VerticalAlignment="Stretch" MinHeight="130"/>

    </Grid>
</Window>
